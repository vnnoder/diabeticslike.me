<div class="row-fluid">

  <div class="span12">
    <div class="span3">&nbsp;</div>
    <div class="span6">
      <div class="sign-in-container">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'login-wrapper'}) do |f| %>
            <div class="header">
              <div class="row-fluid">
                <div class="span12">
                  <h3>Login<img src="/img/logo1.png" alt="Logo" class="pull-right"></h3>
                  <p>Fill out the form below to login.</p>
                </div>
              </div>
            </div>
            <div class="content">
              <%= f.input :email, :placeholder => 'Email', :input_html => {:class => 'span12'}, :autofocus => true %>
              <%= f.input :password, :placeholder => 'Password', :input_html => {:class => 'span12'} %>
              <div class="actions">
                <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'link' %>
                <div class="clearfix"></div>
              </div>
              <div class="content">
                <div class="row-fluid">
                  <div class="span12">
                    <h3>Or You Can Connect with Social Network</h3>
                    <ul class="fancy-tooltip-wrapper">
                      <li>
                        <a class="tooltip-facebook" href="/auth/facebook">
                          <span> Facebook </span>
                        </a>
                      </li>
                      <li>
                        <a class="tooltip-twitter" href="/auth/twitter">
                          <span> Twitter </span>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
        <% end %>

        </div>
      </div>
      <div class="span3">&nbsp;</div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

<% if false %>
    <h2>Sign in</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f| %>
        <%= f.input :email, :autofocus => true %>
        <%= f.input :password %>
        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
    <% end %>
    <%= render "devise/shared/links" %>

<% end %>