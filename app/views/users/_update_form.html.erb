<%= simple_form_for current_user, :url => update_phonenumber_user_path(current_user), :method => :put, :remote => true, :html => {:class => 'form-inline'} do |f| %>
    <%= f.error_notification %>
    <div class="input-prepend">
      <span class="add-on">(+56)-9</span>
      <%= f.input_field :phone_number, :placeholder => 'Your Phone Number', :class => 'small-input', :maxlength => 8 %>
    </div>
    <button class="btn btn-primary">Save changes</button>
<% end %>
