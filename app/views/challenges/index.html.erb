<div class="left-sidebar">
  <div class="row-fluid">
    <div class="span12">
      <div class="widget">
        <div class="widget-header">
          <div class="title">
            Challenges
          </div>
                    <span class="tools">
                      <a class="btn btn-success" href="<%= new_challenge_url%>">
                        <i class="fs1 challenge-icon" aria-hidden="true" data-icon="î‚­" data-original-title=""></i> New Challenge
                      </a>
                    </span>
        </div>
        <div class="widget-body">
          <table class="table table-condensed table-striped table-bordered table-hover no-margin">
            <thead>
            <tr>
              <th style="width:45%">
                Name
              </th>
              <th style="width:20%" class="hidden-phone">
                Status
              </th>
              <th style="width:25%" class="hidden-phone">
                Duration
              </th>
              <th style="width:10%" class="hidden-phone">
              </th>
            </tr>
            </thead>
            <tbody>
            <% statues = %w(new completed challenging joined) %>
            <% map_class = {'new' => 'info', 'completed' => 'important', 'challenging' => 'success', 'joined' => 'warning'} %>
            <% collection.each do |resource| %>
                <% status = statues[rand(4)] %>
                <tr>
                  <td>
                            <span class="name">
                              <%= link_to(resource.name, resource) %>
                            </span>
                  </td>
                  <td>
                    <span class='label label-<%= map_class[status] %>'><%= status %></span>

                  </td>
                  <td class="hidden-phone">
                    <%= resource.duration %>
                  </td>
                  <td class="hidden-phone">

                    <div class="btn-group">
                      <% if status != 'joined' %>
                          <button class="btn btn-success">
                            <i class=" icon-white icon-heart"></i> Join
                          </button>
                      <% end %>
                    </div>
                  </td>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
